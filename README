php go-pear.php

cd /usr/share/php/bin
pear install Mail-1.2.0
pear install Mail_Mime-1.8.0
pear install Net_SMTP-1.4.2

libcurl with ssl
sudo port -f upgrade --enforce-variants curl +ssl

